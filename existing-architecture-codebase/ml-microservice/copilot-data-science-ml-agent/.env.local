# Local Development Environment
# This file is used for local development without Docker

# Application Configuration
APP_NAME=copilot-data-science-ml-agent
VERSION=2.0.0
ENVIRONMENT=local
HOST=0.0.0.0
PORT=8000

# Eureka Configuration (local)
EUREKA_SERVER=http://localhost:8761/eureka
EUREKA_INSTANCE_HOST=localhost

# Google AI Configuration
GOOGLE_API_KEY=
MODEL_NAME=gemini-2.0-flash-exp

# Azure Configuration (optional)
AZURE_API_KEY=
AZURE_API_BASE=
AZURE_API_VERSION=2024-02-01

# Database Configuration (SQLite for local)
DATABASE_URL=sqlite:///./data/db/data_science_agent.db

# ChromaDB Configuration
CHROMA_DB_DIR=./data/chroma_db

# Application Settings
BACKEND_URL=http://localhost:8000
MAX_ITERATIONS=10
TEMPERATURE=0.7
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE_MB=100
SESSION_TIMEOUT_MINUTES=60

# Logging
LOG_LEVEL=debug
