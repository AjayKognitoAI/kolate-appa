# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/app_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=app_db
DATABASE_USER=username
DATABASE_PASSWORD=password


# Caching Strategy
CACHE_TYPE=redis

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Application Configuration
SECRET_KEY=your-secret-key-here
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ===========================
# Auth0 Configuration
# ===========================
# Your Auth0 tenant domain (e.g., "your-tenant.auth0.com")
AUTH0_DOMAIN=your-tenant.auth0.com

# Your API identifier/audience configured in Auth0
AUTH0_AUDIENCE=https://your-api.example.com

# JWT algorithms (default: RS256)
AUTH0_ALGORITHMS=RS256

# Optional: Override issuer URL (defaults to https://{AUTH0_DOMAIN}/)
# AUTH0_ISSUER=https://your-tenant.auth0.com/

# Auth0 RBAC Configuration
# The claim name containing permissions (default: "permissions")
AUTH0_PERMISSIONS_CLAIM=permissions

# Custom claim for roles (use your Auth0 namespace)
AUTH0_ROLES_CLAIM=https://your-namespace/roles

# Enable/disable database RBAC augmentation (default: true)
AUTH0_USE_RBAC=true

# ===========================
# Auth0 Management API (M2M)
# ===========================
# Machine-to-Machine client credentials for Auth0 Management API
AUTH0_M2M_CLIENT_ID=your-m2m-client-id
AUTH0_M2M_CLIENT_SECRET=your-m2m-client-secret
# Management API audience (usually https://{AUTH0_DOMAIN}/api/v2/)
AUTH0_MGMT_AUDIENCE=https://your-tenant.auth0.com/api/v2/
# Self-service SSO profile ID for SSO ticket generation
AUTH0_SSO_PROFILE_ID=your-sso-profile-id

# ===========================
# Multi-Tenancy Configuration
# ===========================
# Enable schema-based multi-tenancy
ENABLE_MULTI_TENANT=true
# Header name for tenant identification
TENANT_HEADER_NAME=org-id
# Header name for user identification
USER_HEADER_NAME=user-id
# Default PostgreSQL schema
DEFAULT_SCHEMA=public
# Prefix for tenant schemas (e.g., org_abc123)
TENANT_SCHEMA_PREFIX=org_

# ===========================
# Background Tasks Configuration
# ===========================
# Enable background task processing (replaces Kafka)
ENABLE_BACKGROUND_TASKS=true
# Maximum number of background task workers
BACKGROUND_TASK_MAX_WORKERS=4

# API Configuration
API_BASE_URL=http://localhost:8000

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]

# ===========================
# Rate Limiting Configuration (API Gateway)
# ===========================
# Maximum requests per time window
RATE_LIMIT_REQUESTS=100
# Time window in seconds
RATE_LIMIT_WINDOW=60

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Enable/disable file logging (true/false)
ENABLE_FILE_LOGGING=true
# Directory for log files (relative to project root)
LOG_DIRECTORY=logs
# Log format: 'json' for structured logs, 'text' for human-readable
LOG_FORMAT=json
# Maximum size of main log file in bytes (10MB default)
LOG_MAX_FILE_SIZE=10485760
# Number of backup log files to keep
LOG_BACKUP_COUNT=5
# Maximum size of error log file in bytes (5MB default)
LOG_ERROR_FILE_SIZE=5242880
# Number of backup error log files to keep
LOG_ERROR_BACKUP_COUNT=3

# File Storage Configuration
FILE_STORAGE_TYPE=local
LOCAL_UPLOAD_PATH=uploads
MEDIA_BASE_URL=/media

# AWS S3 Configuration (only required if FILE_STORAGE_TYPE is "s3")
AWS_S3_BUCKET_NAME=
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BASE_URL=

# Email Configuration
EMAIL_PROVIDER=smtp

# SMTP Configuration (only required if EMAIL_PROVIDER is "smtp")
# For Gmail: use smtp.gmail.com, port 587, and generate App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Your Application Name

# AWS SES Configuration (only required if EMAIL_PROVIDER is "ses")
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@example.com
AWS_SES_FROM_NAME=Your Application Name
AWS_SES_CONFIGURATION_SET=

# Password Reset Configuration
PASSWORD_RESET_OTP_EXPIRE_MINUTES=10
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=5
PASSWORD_RESET_MAX_ATTEMPTS=3
PASSWORD_RESET_RATE_LIMIT_PER_HOUR=3

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
