# =============================================================================
# Frontend Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration (Consolidated Backend)
# -----------------------------------------------------------------------------

# Main API URL - Points to consolidated FastAPI backend
# Old: Had multiple URLs for different microservices
# New: Single consolidated backend URL
NEXT_PUBLIC_API_URL="http://localhost:8000"

# Frontend URL (for NextAuth callbacks, etc.)
NEXT_PUBLIC_FRONTEND_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# Auth0 Configuration
# -----------------------------------------------------------------------------

# Auth0 Domain (e.g., your-tenant.auth0.com)
AUTH0_DOMAIN="your-tenant.auth0.com"

# Auth0 Client ID (from Auth0 Dashboard > Applications)
AUTH0_CLIENT_ID="your-client-id"

# Auth0 Client Secret (from Auth0 Dashboard > Applications)
AUTH0_CLIENT_SECRET="your-client-secret"

# Auth0 Audience (API Identifier from Auth0 Dashboard > APIs)
AUTH0_AUDIENCE="https://api.your-domain.com"

# Auth0 Base URL (used for redirects)
AUTH0_BASE_URL="http://localhost:3000"

# Auth0 Issuer Base URL
AUTH0_ISSUER_BASE_URL="https://your-tenant.auth0.com"

# -----------------------------------------------------------------------------
# NextAuth Configuration
# -----------------------------------------------------------------------------

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-key"

# NextAuth URL (must match NEXT_PUBLIC_FRONTEND_URL)
NEXTAUTH_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable debug mode
NEXT_PUBLIC_DEBUG="false"

# Enable analytics
NEXT_PUBLIC_ENABLE_ANALYTICS="false"

# -----------------------------------------------------------------------------
# Accessibility - UserWay Widget
# -----------------------------------------------------------------------------

# UserWay Account ID (sign up at https://userway.org/get)
# Leave empty to disable the widget
NEXT_PUBLIC_USERWAY_ACCOUNT_ID=""

# -----------------------------------------------------------------------------
# DEPRECATED - No longer needed with consolidated backend
# These variables are kept for reference during migration
# -----------------------------------------------------------------------------

